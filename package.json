{
  "name": "@devoxa/mock-oidc",
  "description": "Mock OpenID Connect sign-in for test environments",
  "version": "1.0.0",
  "main": "dist/index.js",
  "private": true,
  "license": "MIT",
  "repository": {
    "url": "https://github.com/devoxa/mock-oidc"
  },
  "scripts": {
    "start": "ts-node-dev --exit-child --respawn --rs src/index.ts",
    "format": "prettier --ignore-path='.gitignore' --list-different --write .",
    "format:check": "prettier --ignore-path='.gitignore' --check .",
    "lint": "eslint --ignore-path='.gitignore' 'src/**/*.ts'",
    "build": "rm -rf dist/ && tsc",
    "preversion": "yarn build"
  },
  "eslintConfig": {
    "extends": "@devoxa"
  },
  "prettier": "@devoxa/prettier-config",
  "dependencies": {
    "body-parser": "1.20.3",
    "express": "4.21.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@devoxa/eslint-config": "3.0.11",
    "@devoxa/prettier-config": "2.0.3",
    "@types/express": "5.0.0",
    "@types/node": "20.9.5",
    "eslint": "8.57.1",
    "prettier": "3.3.3",
    "ts-node-dev": "2.0.0",
    "typescript": "5.6.2"
  },
  "volta": {
    "node": "20.9.0"
  }
}
